# 성적 관리 프로그램

def calculate_total(scores): # 총점 계산 함수
    return sum(scores)

def calculate_average(total, num_subjects): #평균 계산 함수
    return total / num_subjects

def calculate_grade(average): #학점 계산 함수
    if average >= 90:
        return "A"
    elif average >= 80:
        return "B+"
    elif average >= 70:
        return "B"
    elif average >= 60:
        return "C"
    else:
        return "F"

def calculate_rank(students):#등수 계산 함수
    rank_students = sorted(students, key=lambda x: x['average'], reverse=True)
    for idx, student in enumerate(rank_students):
        student['rank'] = idx + 1
    return rank_students

def print_report(students): #출력 함수
    print("=" * 50)
    print("학번       이름       영어   C-언어   파이썬   총점   평균   학점   등수")
    print("=" * 50)
    for student in students:
        print(f"{student['id']}     {student['name']}       {student['Eng']}    {student['c']}      {student['python']}     {student['total']}    {student['average']:.2f}      {student['grade']}       {student['rank']}")
    print("=" * 50)

# 학생 데이터 입력
students = []
for _ in range(5):
    student_id = input("학번: ")
    name = input("이름: ")
    Eng = int(input("영어 점수: "))
    c = int(input("C-언어 점수: "))
    python = int(input("파이썬 점수: "))
    
    scores = [Eng, c, python]
    total = calculate_total(scores)
    average = calculate_average(total, len(scores))
    grade = calculate_grade(average)
    
    students.append({
        'id': student_id,
        'name': name,
        'Eng': Eng,
        'c': c,
        'python': python,
        'total': total,
        'average': average,
        'grade': grade
    })

# 등수 계산
students = calculate_rank(students)

# 결과 출력
print_report(students)
